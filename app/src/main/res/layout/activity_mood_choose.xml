<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/voilet_bg"
        tools:context=".activities.MoodChooseActivity">

    <TextView
            android:id="@+id/choose_mood_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_mood"
            android:layout_marginTop="20dp"
            style="@style/TextTitleStyle"
            android:gravity="center"/>


    <Button
            android:id="@+id/next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Next"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"
            style="@style/ButtonStyle"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/choose_mood_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_above="@id/next_btn"
            android:layout_below="@id/choose_mood_title"/>

</RelativeLayout>